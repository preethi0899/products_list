extends layout

block content
  h1 Title: #{products.product_name}
  
  p #[strong p:product_id] 
    a(href=products.product_name.url) #{products.product_name.name}
  p #[strong seller_id:] #{products.seller_id}
  p #[strong cost:] #{products.cost}
  p #[strong type:] #{products.type}
    
    each val in products_instances
      hr
      if val.status=='Available'
        p.text-success #{val.status}
      else
        p.text-warning #{val.status}
      if val.status!='Available'
        p #[strong Due back:] #{val.due_back}
        p #[strong Id:] 
        a(href=val.url) #{val._id}
 
    else
      p There are no products available.
 
